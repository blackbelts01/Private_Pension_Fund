<odoo>
    <data>
        <record model="ir.ui.view" id="action_allocation_form1">
            <field name="name">Allocation</field>
            <field name="model">allocation</field>
            <field name="view_type">form,tree</field>
            <field name="view_mode">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="allocation_id"/>
                            <field name="desc"/>
                            <field name="allocation_date"/>
                            <field name="currency"/>
                        </group>
                        <group >
                            <field name="allocation_total"/>
                            <field name="allocation_invested"/>
                            <field name="allocation_O_S"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Allocation Lines">
                            <field name="allocation_line">
                                <tree editable="bottom">
                                    <field name="sub"/>
                                    <field name="sub_date"/>
                                    <field name="sub_total_ammount"/>
                                    <field name="allocated"/>
                                    <field name="out_standing"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Investment Lines">
                            <field name="allocation_line_invest">
                                <tree editable="bottom">
                                    <field name="invest"/>
                                    <field name="amount"/>
                                    <field name="date_invest"/>
                                </tree>
                                <form>
                                    <field  name="bill_lines">
                                        <tree string="Bill lines" >
                                            <field name="sequence" widget="handle" />
                                            <field name="product_id"/>

                                            <field name="name"/>
                                            <field name="company_id" invisible="1"/>
                                            <field name="account_id" groups="account.group_account_user"
                                              />
                                            <field name="account_analytic_id" groups="analytic.group_analytic_accounting"
                                                   />
                                            <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                            <field name="quantity"/>
                                            <field name="uom_id" groups="product.group_uom"/>
                                            <field name="price_unit"/>
                                            <field name="discount" groups="base.group_no_one"/>
                                            <field name="invoice_line_tax_ids" widget="many2many_tags" options="{'no_create': True}" />
                                            <field name="price_subtotal"/>
                                            <field name="currency_id" invisible="1"/>
                                        </tree>
                                    </field>
                                </form>
                            </field>
                        </page>
                    </notebook>


                </form>
                <!--<field name="view_id" ref="view_invoice_form_inhert_ppf"/>-->

            </field>
        </record>
        <record model="ir.actions.act_window" id="action_ppf_allocation">
            <field name="name">Allocations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">allocation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html"> <p class="oe_view_nocontent_create"> Click here to create a Allocation.</p></field>
        </record>

        <record model="ir.actions.act_window.view" id="action_ppf_allocation_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <!--<field name="view_id" ref="subscription_tree"/>-->
            <field name="act_window_id" ref="action_ppf_allocation"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_ppf_allocation_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="action_allocation_form1"/>
            <field name="act_window_id" ref="action_ppf_allocation"/>
        </record>


    </data>
</odoo>